{
  "compile": {
    "browser": {
      "packages": "./packages/browser"
    },
    "node": {
      "packages": "./packages/node"
    },
    "global": {
      "packages": "./packages"
    }
  },
  "test": {
    "browser": {
      "type": "karma",
      "pattern": [
        "./packages/browser/**/*.spec.js"
      ]
    },
    "node": {
      "type": "jasmine",
      "pattern": [
        "./packages/node/**/*.spec.js"
      ]
    }
  }
}
